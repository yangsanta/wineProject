<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>WineProject</display-name>
	<filter>
		<filter-name>productList</filter-name>
		<filter-class>Filter.productList</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>productList</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>DiscussionList</servlet-name>
		<servlet-class>discussion.controller.DiscussionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DiscussionList</servlet-name>
		<url-pattern>/DiscussionList</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>insertReply</servlet-name>
		<servlet-class>reply.controller.ReplyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>insertReply</servlet-name>
		<url-pattern>/reply</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DisplayProducts</servlet-name>
		<servlet-class>product.controller.DisplayProducts</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayProducts</servlet-name>
		<url-pattern>/product/DisplayProducts</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>memberRegister</servlet-name>
		<servlet-class>member.controller.register</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>memberRegister</servlet-name>
		<url-pattern>/product/memberRegister</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Disselect</servlet-name>
		<servlet-class>product.controller.DisplayProducts</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Disselect</servlet-name>
		<url-pattern>/product/selectrecipeaddfoodfidname</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>setselectallfood</servlet-name>
		<servlet-class>recipe.controller.recipefood</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>setselectallfood</servlet-name>
		<url-pattern>/food/setselectall</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MemberService</servlet-name>
		<servlet-class>member.controller.MemberService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberService</servlet-name>
		<url-pattern>/member/MemberService</url-pattern>
	</servlet-mapping>
</web-app>